{% extends "index.html.twig" %}

{% block pageName %}
    {{ group.getName() }}
{% endblock %}
{% block pageDesc %}
    Subject status
{% endblock %}

{% block content %}
    <h2 class="page-header">Lessons progress</h2>
    <div class="row">
        {% for i in 0..4 %}
            <div class="col-md-2">
                Level {{ i+1 }}
                <div class="progress">
                    <div class="progress-bar progress-bar-flashcards" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                        40% Complete (success)
                    </div>
                </div>
            </div>
        {% endfor %}

        <div class="col-md-2">
            Learned / Total words
            <div>40 / 1021</div>
        </div>
    </div>

    <button class="btn btn-learning">Start lesson now</button>

    <h2 class="page-header">Add new flash card</h2>
    <div class="create-new-flashcard">
        {% include "fiches/_form.html.twig" %}
    </div>
{% endblock %}
