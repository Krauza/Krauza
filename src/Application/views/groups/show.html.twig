{% extends "index.html.twig" %}
{% set group = userGroup.getGroup() %}

{% block pageName %}
    {{ group.getName() }}
{% endblock %}
{% block pageDesc %}
    Subject status
{% endblock %}

{% block content %}
    <h2 class="page-header">Lessons progress</h2>
    <div class="row">
        {% for i in 0..4 %}
            <div class="col-md-2">
                Level {{ i+1 }}
                <div class="progress">
                    <div class="progress-bar progress-bar-flashcards" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                        40% Complete (success)
                    </div>
                </div>
            </div>
        {% endfor %}

        <div class="col-md-2">
            Learned / Total words
            <div>40 / 1021</div>
        </div>
    </div>

    <button class="btn btn-learning">Start lesson now</button>

    {% if group.isOwner(current_user) %}
        <h2 class="page-header">Owner options</h2>
        <h3>Add new flashcard</h3>
        <div class="create-new-flashcard">
            {% include "fiches/_form.html.twig" %}
        </div>

        <hr>

        <button class="btn btn-info btn-lg">Manage flashcards from this group</button>
    {% endif %}
{% endblock %}
